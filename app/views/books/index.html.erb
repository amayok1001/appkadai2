<%= render '/books/list', { book: @book, user: @user } %>

<!-- ここからBooks一覧 -->
<div class="col-xs-9">
<h2> Books</h2>
    <table>
        <tr class="booksline">
          <th></th>
          <th> Title</td>
          <th> Opinion</td>
        </tr>
        <% @books.each do |book| %>
          <tr>
			<td><%= attachment_image_tag book.user, :profile_image, :size =>"40x40", format:'jpeg', class: "pull-left profile-img", fallback: "no_image.png" %></td>
            <td><%= link_to book_path(book), class: "book_#{book.id}" do %>
                <%= book.title %>
                <% end %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
    </table>
</div>
</div>
</div>